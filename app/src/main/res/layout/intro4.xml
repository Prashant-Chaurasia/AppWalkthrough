<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bgscreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dummy_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_centerHorizontal="true"
            android:text="@string/slide_4_toptext"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <LinearLayout
            android:id="@+id/listroot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dummy_tv"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="30dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:elevation="6dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:elevation="6dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/image"
                    android:layout_marginLeft="16dp"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Sam can connect you to 2 jobs"
                    android:background="@null"
                    android:paddingRight="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textSize="15sp"/>

            </LinearLayout>

            <View

                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="#dedede"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/slide4animateroot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listroot"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:elevation="3dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:elevation="6dp">

                <ImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/briefcase1"
                    android:layout_marginLeft="16dp"
                    android:layout_centerHorizontal="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your Next Job"
                        android:background="@null"
                        android:paddingRight="4dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <View
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginRight="100dp"
                        android:background="#dedede"/>

                    <View
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="#dedede"
                        android:layout_marginRight="120dp"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="6dp">

                <ImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/briefcase2"
                    android:layout_marginLeft="16dp"
                    android:layout_centerHorizontal="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your Next Career move"
                        android:background="@null"
                        android:paddingRight="4dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <View
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginRight="100dp"
                        android:background="#dedede"/>

                    <View
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="#dedede"
                        android:layout_marginRight="120dp"/>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>